<div class="container">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task", edit_path %>
  <%= link_to "Delete this task", delete_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

  <blockquote class="blockquote">
    <p class="mb-0"><%= @task.details %></p>
    <p class="mb-0"><%= @task.completed ? "Task complete!" : "Task incomplete" %></p>
  </blockquote>
<hr />
  <%= link_to "Back to list", tasks_path %>

</div>
